<header class="login">
    <a href="/"><img src="images/logo.png" alt="tremolo logo" width="150" height="auto"></a>
    <h1>Tremolo</h1>
    <nav>
        <ul class="navigation">
            <li><a href="/">About</a></li>
            <li><a href="/course">Course</a></li>
        </ul>
    </nav>
    <div class="user_field">
        <img src="user_photo/<% if(user_render.user_pic == 1){%><%= user_render._id%>%><%}else{%>default_pic<%}%>.jpg" alt="<%= user_render.name %>" width="40" height="40" class="user_photo">
        <a href="/account?userID=<%= user_render._id%>" class="user_field_text">
            <span class="user_name"><%=user_render.name%></span>
            <span class="user_email"><%=user_render.email%></span>
        </a>
    </div>
</header>

