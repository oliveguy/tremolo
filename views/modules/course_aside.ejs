<aside class="module_list">
  <div class="aside_top">
    <div class="progress_family">
      <span class="progress_text">Course Progress<span>50%</span></span>
      <div class="progress_bar">
        <span class="meter"></span>
      </div>
    </div>
    <img src="#" width="20px" height="20px" id="close_aside">
  </div>
  <ul class="modules">
    <li>
      <span class="module_list">Module 1. Basic Information
          <span class="expandIcon">+</span>
      </span>
      <ul class="sub_module_list on">
          <li class="sub_modules"><a href="./m1-1">Anatomy of a Guitar</a></li>
          <li class="sub_modules"><a href="./m1-2">String Names</a></li>
          <li class="sub_modules"><a href="./m1-3">Tuning Your Guitar</a></li>
          <li class="sub_modules"><a href="./m1-4">Module Review</a></li>
          <li class="sub_modules"><a href="./m1-a">Assessment: Module 1</a></li>
      </ul>
    </li>
<% var status=''; %>
<% var tag='a'; %>
<% if(user_render.course.currentM == 1){ %>
  <% status = "deactive" %>
  <% tag = "span" %>
<% } %>
    <li>
      <span class="module_list  <%= status %>">Module 2. Individual Notes
        <span class="expandIcon">+</span>
      </span>
      <ul class="sub_module_list <%= status %>">
          <li class="sub_modules"><<%= tag %> href="./m2-1">Rudimentary Music Theory</<%=tag%>></li>
          <li class="sub_modules"><<%= tag %> href="./m2-2">Strings 1-3</<%=tag%>></li>
          <li class="sub_modules"><<%= tag %> href="./m2-3">Strings 4-6</<%=tag%>></li>
          <li class="sub_modules"><<%= tag %> href="./m2-4">Module Review</<%=tag%>></li>
          <li class="sub_modules"><<%= tag %> href="./m2-a">Assessment: Module 2</<%=tag%>></li>
      </ul>
    </li>
<% if(user_render.course.currentM == 2){ %>
  <% status = "deactive" %>
  <% tag = "span" %>
<% } %>
    <li>
      <span class="module_list <%= status %>">Module 3. Chords and Scales
        <span class="expandIcon">+</span>
      </span>
      <ul class="sub_module_list <%= status %>">
          <li class="sub_modules"><<%= tag %> href="./m3-1">G Major Scale</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m3-2">G, C, D Chords</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m3-3">Am, Em Chords</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m3-4">Module Review</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m3-a">Assessment: Module 3</<%= tag %>></li>
      </ul>
    </li>
<% if(user_render.course.currentM == 3){ %>
  <% status = "deactive" %>
  <% tag = "span" %>
<% } %>
    <li>
      <span class="module_list <%= status %>">Module 4. All Together
        <span class="expandIcon">+</span>
      </span>
      <ul class="sub_module_list <%= status %>">
          <li class="sub_modules"><<%= tag %> href="./m4-1">Chords in Rhythm</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m4-2">Scales in Rhythm</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m4-3">Scale Patterns</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m4-4">Module Review</<%= tag %>></li>
          <li class="sub_modules"><<%= tag %> href="./m4-5">Assessment: Full Module</<%= tag %>></li>
      </ul>
    </li>
  </ul>
</aside>
